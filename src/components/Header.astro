---
// Header component for AI-Automation-Engineers.de
import AuthButtonStandalone from './AuthButtonStandalone.tsx';
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">AI</span>
          </div>
          <span class="text-xl font-bold text-gray-900 hidden sm:block">AI-Automation-Engineers.de</span>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="/profiles" class="text-gray-700 hover:text-blue-600 transition-colors">Profile</a>
        <a href="/blog" class="text-gray-700 hover:text-blue-600 transition-colors">Blog</a>
        <a href="/learning" class="text-gray-700 hover:text-blue-600 transition-colors">Lernen</a>
        <a href="/training" class="text-gray-700 hover:text-blue-600 transition-colors">Schulungen</a>
      </nav>

      <!-- Auth Button -->
      <div class="flex items-center space-x-4">
        <div class="hidden md:block">
          <AuthButtonStandalone client:load />
        </div>

        <!-- Mobile menu button -->
        <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden border-t border-gray-200 py-4 hidden">
      <nav class="flex flex-col space-y-4">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">Home</a>
        <a href="/profiles" class="text-gray-700 hover:text-blue-600 transition-colors">Profile</a>
        <a href="/blog" class="text-gray-700 hover:text-blue-600 transition-colors">Blog</a>
        <a href="/learning" class="text-gray-700 hover:text-blue-600 transition-colors">Lernen</a>
        <a href="/training" class="text-gray-700 hover:text-blue-600 transition-colors">Schulungen</a>
      </nav>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <AuthButtonStandalone client:load variant="mobile" />
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>

<style>
  /* Custom styles for header */
  .text-blue-600 {
    color: #3b82f6;
  }
  
  .bg-blue-600 {
    background-color: #3b82f6;
  }
  
  .hover\:bg-blue-700:hover {
    background-color: #1d4ed8;
  }
  
  .hover\:text-blue-600:hover {
    color: #3b82f6;
  }
</style>