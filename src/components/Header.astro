---
// Header component for AI-Automation-Engineers.de
import AuthButtonStandalone from './AuthButtonStandalone.tsx';
---

<header class="absolute top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="w-10 h-10 bg-gray-900 rounded-2xl flex items-center justify-center group-hover:bg-gray-800 transition-colors">
            <span class="text-white font-bold text-lg">AI</span>
          </div>
          <span class="text-xl font-semibold text-gray-900 hidden sm:block">AI-Automation-Engineers.de</span>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-12">
        <a href="/profiles" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">
          Profile
        </a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">
          Blog
        </a>
        <a href="/training" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">
          Schulungen
        </a>
      </nav>

      <!-- Auth Button -->
      <div class="flex items-center space-x-6">
        <div class="hidden md:block">
          <AuthButtonStandalone client:load />
        </div>

        <!-- Mobile menu button -->
        <button id="mobile-menu-button" class="md:hidden p-3 rounded-full hover:bg-gray-100 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden border-t border-gray-200 py-6 hidden">
      <nav class="flex flex-col space-y-6">
        <a href="/" class="text-gray-700 hover:text-gray-900 transition-colors font-medium text-lg">Home</a>
        <a href="/profiles" class="text-gray-700 hover:text-gray-900 transition-colors font-medium text-lg">Profile</a>
        <a href="/blog" class="text-gray-700 hover:text-gray-900 transition-colors font-medium text-lg">Blog</a>
        <a href="/training" class="text-gray-700 hover:text-gray-900 transition-colors font-medium text-lg">Schulungen</a>
      </nav>
      <div class="mt-6 pt-6 border-t border-gray-200">
        <AuthButtonStandalone client:load variant="mobile" />
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>

<style>
  /* Custom styles for header */
  .text-blue-600 {
    color: #3b82f6;
  }
  
  .bg-blue-600 {
    background-color: #3b82f6;
  }
  
  .hover\:bg-blue-700:hover {
    background-color: #1d4ed8;
  }
  
  .hover\:text-blue-600:hover {
    color: #3b82f6;
  }
</style>