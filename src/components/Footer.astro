---
// Footer component for AI-Automation-Engineers.de

// Get version information from environment variables
const commitHash = import.meta.env.PUBLIC_COMMIT_HASH;
const buildNumber = import.meta.env.PUBLIC_BUILD_TIME;
const isDev = import.meta.env.DEV;

// Format commit hash for display (show first 7 characters)
const shortCommitHash = commitHash ? commitHash.substring(0, 7) : 'dev';
const versionInfo = isDev ? 'dev' : `v${buildNumber || '1'}.${shortCommitHash}`;

// Create detailed version info for tooltip
const detailedVersionInfo = isDev 
  ? 'Development build'
  : `Build #${buildNumber || '1'} • Commit: ${commitHash || 'unknown'} • Built: ${new Date().toISOString().split('T')[0]}`;
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">AI</span>
          </div>
          <span class="text-xl font-bold">AI-Automation-Engineers.de</span>
        </div>
        <p class="text-gray-400 max-w-md">
          The premier community for AI automation engineers. Connect, learn, and grow with fellow professionals
          shaping the future of intelligent automation.
        </p>
        <div class="mt-4">
          <h4 class="font-semibold mb-2">Subscribe to our Newsletter</h4>
          <form class="flex max-w-md" action="/newsletter-signup" method="post">
            <input 
              type="email" 
              name="email"
              placeholder="Enter your email" 
              required
              class="flex-1 px-4 py-2 rounded-l-lg border-0 bg-gray-800 text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-r-lg transition-colors">
              Subscribe
            </button>
          </form>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-semibold mb-4">Navigation</h4>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
          <li><a href="/profiles" class="hover:text-white transition-colors">Profiles</a></li>
          <li><a href="/blog" class="hover:text-white transition-colors">Blog</a></li>
          <li><a href="/learning" class="hover:text-white transition-colors">Learning</a></li>
          <li><a href="/training" class="hover:text-white transition-colors">Training</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="font-semibold mb-4">Resources</h4>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/docs" class="hover:text-white transition-colors">Documentation</a></li>
          <li><a href="/api" class="hover:text-white transition-colors">API Reference</a></li>
          <li><a href="/community-guidelines" class="hover:text-white transition-colors">Community Guidelines</a></li>
          <li><a href="/support" class="hover:text-white transition-colors">Support</a></li>
          <li><a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a></li>
          <li><a href="/terms" class="hover:text-white transition-colors">Terms of Service</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
    <div class="flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-4">
    <p class="text-gray-400 text-sm">
        © {new Date().getFullYear()} AI-Automation-Engineers.de. All rights reserved.
      </p>
            <div class="flex items-center space-x-2">
