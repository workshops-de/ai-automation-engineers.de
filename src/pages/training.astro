---

<BaseLayout {title} {description}>
  <div class="animate-fade-in">
    <!-- Hero Section -->
    <section class="bg-gradient-primary text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Professionelle KI-Schulungen</h1>
          <p class="text-xl text-blue-100 max-w-2xl mx-auto mb-8">
            Transformiere dein Team mit umfassenden KI-Automatisierungsschulungen von Branchenexperten
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold">1300+</div>
              <div class="text-sm text-blue-100">Community-Mitglieder</div>
            </div>
            <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold">30</div>
              <div class="text-sm text-blue-100">Expert:innen</div>
            </div>
            <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold">7800+</div>
              <div class="text-sm text-blue-100">Teilnehmer</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Training Programs -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="section-title">KI-Schulungsprogramme</h2>
          <p class="section-subtitle">Wähle das Programm, das zu deinen Lernzielen und deinem Zeitplan passt</p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {topPrograms.map((program: any) => (
            <div class="card card-hover overflow-hidden">
              <img 
                src={program.image} 
                alt={program.title}
                class="w-full h-48 object-cover"
                width="600"
                height="400"
                loading="lazy"
              />
              <div class="p-8">
                <div class="flex items-center justify-between mb-4">
                  <span class="bg-primary-100 text-primary-600 text-sm px-3 py-1 rounded-full font-medium">
                    {program.type}
                  </span>
                </div>
                
                <h3 class="text-2xl font-bold text-gray-900 mb-3">{program.title}</h3>
                <p class="text-gray-600 mb-6">{program.description}</p>
                
                <div class="grid grid-cols-2 gap-4 mb-6 text-sm">
                  <div>
                    <span class="font-medium text-gray-900">Dauer:</span>
                    <span class="text-gray-600 ml-1">{program.duration}</span>
                  </div>
                  <div>
                    <span class="font-medium text-gray-900">Format:</span>
                    <span class="text-gray-600 ml-1">{program.format}</span>
                  </div>
                  <div>
                    <span class="font-medium text-gray-900">Level:</span>
                    <span class="text-gray-600 ml-1">{program.level}</span>
                  </div>
                  <div>
                    <span class="font-medium text-gray-900">Nächster Start:</span>
                    <span class="text-gray-600 ml-1">{program.nextStart}</span>
                  </div>
                </div>
                
                <div class="mb-6">
                  <h4 class="font-medium text-gray-900 mb-3">Inhalte:</h4>
                  <ul class="space-y-2">
                    {program.features.map((feature: string) => (
                      <li class="flex items-center text-sm text-gray-600">
                        <svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <div class="flex items-center justify-between mb-6">
                  <div class="flex items-center">
                    {[...Array(5)].map((_, i) => (
                      <svg 
                        class="w-4 h-4 text-yellow-400"
                        fill="currentColor" 
                        viewBox="0 0 20 20"
                      >
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    ))}
                    <span class="ml-2 text-sm text-gray-600">4.9/5</span>
                  </div>
                </div>
                
                <div class="flex gap-3">
                  <a href="https://workshops.de/schulungsthemen/kuenstliche-intelligenz" target="_blank" rel="noopener noreferrer" class="btn-primary flex-1 text-center">Jetzt Buchen</a>
                  <a href="https://workshops.de/schulungsthemen/kuenstliche-intelligenz" target="_blank" rel="noopener noreferrer" class="btn-outline text-center">Mehr Infos</a>
                </div>
