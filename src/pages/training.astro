      <div class="text-center mb-20">
        <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-8">
          Firmen-Services.
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Umfassende Lösungen für Enterprise KI-Bildung
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        {corporateServices.map((service, index) => (
          <div class="group animate-fade-in-up" style={`animation-delay: ${index * 200}ms`}>
            <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition-all duration-300">
              <div class="w-16 h-16 bg-gray-100 rounded-2xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {service.icon === 'academic-cap' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  )}
                  {service.icon === 'chart-bar' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  )}
                  {service.icon === 'support' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
