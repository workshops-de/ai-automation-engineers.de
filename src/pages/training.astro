---

<BaseLayout {title} {description}>
  <!-- Hero Section -->
  <section class="relative min-h-screen bg-white overflow-hidden">
    <!-- Background Animation -->
    <div class="absolute inset-0 bg-gradient-to-br from-orange-50 via-white to-pink-50">
      <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))]"></div>
      <!-- Floating animation elements -->
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-orange-100 rounded-full mix-blend-multiply filter blur-xl opacity-60 animate-blob"></div>
      <div class="absolute top-1/3 right-1/4 w-72 h-72 bg-pink-100 rounded-full mix-blend-multiply filter blur-xl opacity-60 animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-1/4 left-1/3 w-80 h-80 bg-yellow-100 rounded-full mix-blend-multiply filter blur-xl opacity-60 animate-blob animation-delay-4000"></div>
    </div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20">
      <div class="text-center">
        <!-- Main Headline -->
        <h1 class="text-6xl sm:text-7xl lg:text-8xl xl:text-9xl font-bold tracking-tight mb-8 animate-fade-in">
          <span class="block text-gray-900">Professionelle</span>
          <span class="block bg-gradient-to-r from-orange-600 to-pink-600 bg-clip-text text-transparent">KI-Schulungen.</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl sm:text-2xl lg:text-3xl text-gray-600 mb-16 max-w-4xl mx-auto font-light leading-relaxed animate-fade-in animation-delay-300">
          Transformiere dein Team mit umfassenden<br>
          KI-Automatisierungsschulungen von Branchenexperten.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in animation-delay-600">
          <a href="https://workshops.de/schulungsthemen/kuenstliche-intelligenz?utm_source=ai-automation-engineers_de&utm_campaign=crossmarketing_permanent&utm_medium=portal&utm_content=training-page"
             target="_blank"
             class="inline-flex items-center px-8 py-4 text-lg font-semibold text-white bg-gray-900 rounded-full hover:bg-gray-800 transition-all duration-300 shadow-lg hover:shadow-xl">
            Programme entdecken
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="https://workshops.de/schulungsthemen/kuenstliche-intelligenz?utm_source=ai-automation-engineers_de&utm_campaign=crossmarketing_permanent&utm_medium=portal&utm_content=training-page"
             target="_blank"
             class="inline-flex items-center px-8 py-4 text-lg font-semibold text-gray-900 bg-white border-2 border-gray-200 rounded-full hover:border-gray-900 transition-all duration-300">
            Beratung vereinbaren
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Training Programs -->
  <section class="py-32 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-5xl sm:text-6xl font-bold text-gray-900 mb-8">
          Unsere Programme.
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Wähle das Programm, das zu deinen Lernzielen und deinem Zeitplan passt
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        {topPrograms.map((program: any, index: number) => (
          <div class="group animate-fade-in-up" style={`animation-delay: ${index * 200}ms`}>
            <div class="aspect-[4/3] bg-gray-100 rounded-2xl overflow-hidden mb-8 group-hover:scale-105 transition-transform duration-300">
              <img
                src={program.image}
                alt={program.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>

            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500 uppercase tracking-wide font-medium">
                  {program.type}
                </span>
                <div class="flex items-center">
