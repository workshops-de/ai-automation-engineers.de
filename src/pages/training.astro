                  {service.icon === 'academic-cap' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  )}
                  {service.icon === 'chart-bar' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  )}
                  {service.icon === 'support' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  )}
                  {service.icon === 'briefcase' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0H8m8 0v2a2 2 0 01-2 2H10a2 2 0 01-2-2V6"></path>
                  )}
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{service.title}</h3>
              <p class="text-gray-600">{service.description}</p>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="https://workshops.de/schulungsthemen/kuenstliche-intelligenz" target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-8 py-3 inline-block">Firmen-Schulung anfragen</a>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="section-title">Das sagen unsere Teilnehmer</h2>
          <p class="section-subtitle">Erfolgsgeschichten von Experten, die ihre Karriere transformiert haben</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {testimonials.map(testimonial => (
            <div class="card">
              <div class="flex items-center mb-4">
                <img 
                  src={testimonial.image} 
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full object-cover"
                  width="48"
                  height="48"
                  loading="lazy"
                />
                <div class="ml-4">
                  <h4 class="font-bold text-gray-900">{testimonial.name}</h4>
                  <p class="text-sm text-gray-600">{testimonial.role}</p>
                  <p class="text-sm text-primary-600">{testimonial.company}</p>
                </div>
              </div>
              <blockquote class="text-gray-700 italic">
                "{testimonial.content}"
              </blockquote>
              <div class="flex items-center mt-4">
                {[...Array(5)].map((_, i) => (
                  <svg 
                    class="w-4 h-4 text-yellow-400"
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="section-title">Häufig gestellte Fragen</h2>
        </div>
        
        <div class="space-y-6">
          <div class="card">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Welche Voraussetzungen sind für die Schulungsprogramme erforderlich?</h3>
            <p class="text-gray-600">Die meisten Programme erfordern grundlegende Programmierkenntnisse (Python bevorzugt) und Vertrautheit mit Datenkonzepten. Spezifische Anforderungen sind für jedes Programm aufgelistet.</p>
          </div>
          
          <div class="card">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Bietet ihr Ratenzahlungspläne oder Finanzierungsoptionen an?</h3>
            <p class="text-gray-600">Ja, wir bieten flexible Zahlungspläne und Unternehmensfinanzierungsoptionen an. Kontaktiere unser Team, um Zahlungsvereinbarungen zu besprechen, die zu deinem Budget passen.</p>
          </div>
          
          <div class="card">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Welche Art von Unterstützung wird nach dem Abschluss angeboten?</h3>
