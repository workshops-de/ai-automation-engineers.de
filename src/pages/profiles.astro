---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfilesList from '../components/ProfilesList.tsx';

const title = 'Profiles';
const description = 'Discover and connect with AI automation engineers from around the world. Browse profiles, skills, and expertise in our professional community.';
---

<BaseLayout {title} {description}>
  <div class="animate-fade-in">
    <ProfilesList client:load />
  </div>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>