---

<BaseLayout {title} {description}>
  <div class="animate-fade-in">
    <!-- Hero Section -->
    <section class="bg-gradient-primary text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">AI Automation Professionals</h1>
          <p class="text-xl text-blue-100 max-w-2xl mx-auto mb-8">
            Connect with talented AI automation engineers, researchers, and thought leaders from around the world
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold">500+</div>
              <div class="text-sm text-blue-100">Active Members</div>
            </div>
            <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold">50+</div>
              <div class="text-sm text-blue-100">Countries</div>
            </div>
            <div class="bg-white bg-opacity-20 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold">1000+</div>
              <div class="text-sm text-blue-100">Projects</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Search and Filter Section -->
    <section class="py-8 bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-4">
          <!-- Search -->
          <div class="flex-1">
            <div class="relative">
              <input 
                type="text" 
                placeholder="Search profiles by name, skills, or company..."
                class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Filters -->
          <div class="flex flex-wrap gap-4">
            <select class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <option value="">Specialty</option>
              {filterOptions.specialties.map(specialty => (
                <option value={specialty}>{specialty}</option>
              ))}
            </select>
            
            <select class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <option value="">Experience</option>
              {filterOptions.experience.map(exp => (
                <option value={exp}>{exp}</option>
              ))}
            </select>
            
            <select class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <option value="">Location</option>
              {filterOptions.location.map(loc => (
                <option value={loc}>{loc}</option>
              ))}
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- Profiles Grid -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {profiles.map(profile => (
            <div class="card card-hover">
              <div class="flex items-center mb-4">
                <img 
                  src={profile.avatar} 
                  alt={profile.name}
                  class="w-16 h-16 rounded-full object-cover"
                  width="64"
                  height="64"
                  loading="lazy"
                />
                <div class="ml-4">
                  <h3 class="text-xl font-bold text-gray-900">{profile.name}</h3>
                  <p class="text-primary-600 font-medium">{profile.title}</p>
                  <p class="text-gray-600 text-sm">{profile.company}</p>
                </div>
              </div>
              
              <div class="flex items-center text-sm text-gray-600 mb-3">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                {profile.location}
              </div>
              
              <p class="text-gray-700 text-sm mb-4 line-clamp-3">
                {profile.bio}
              </p>
              
              <!-- Specialties -->
              <div class="mb-4">
                <div class="flex flex-wrap gap-1">
                  {profile.specialties.map(specialty => (
                    <span class="bg-primary-100 text-primary-600 text-xs px-2 py-1 rounded-full">
                      {specialty}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Skills -->
              <div class="mb-4">
                <div class="flex flex-wrap gap-1">
                  {profile.skills.slice(0, 4).map(skill => (
                    <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">
                      {skill}
                    </span>
                  ))}
                  {profile.skills.length > 4 && (
                    <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">
                      +{profile.skills.length - 4} more
                    </span>
                  )}
                </div>
              </div>
              
              <!-- Stats -->
              <div class="flex justify-between text-sm text-gray-600 mb-4">
                <div>
                  <span class="font-medium text-gray-900">{profile.experience}</span>
                  <span class="ml-1">experience</span>
                </div>
                <div>
                  <span class="font-medium text-gray-900">{profile.projects}</span>
                  <span class="ml-1">projects</span>
                </div>
                <div>
                  <span class="font-medium text-gray-900">{profile.connections}</span>
                  <span class="ml-1">connections</span>
                </div>
              </div>
              
              <!-- Actions -->
              <div class="flex gap-2">
                <button class="btn-primary flex-1">Connect</button>
                <button class="btn-outline">View Profile</button>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Load More -->
        <div class="text-center mt-12">
          <button class="btn-outline">
            Load More Profiles
          </button>
        </div>
      </div>
    </section>

    <!-- Join Community CTA -->
    <section class="py-16 bg-gradient-primary text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Join Our Community</h2>
        <p class="text-xl text-blue-100 mb-8">
          Ready to connect with AI automation professionals? Create your profile and start networking today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="btn-secondary">Create Profile</button>
          <button class="btn-outline bg-white text-primary-600 border-white hover:bg-primary-50">
            Learn More
          </button>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>