---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfilesList from '../components/ProfilesList.tsx';

const title = 'Profile';
const description = 'Entdecke und vernetze dich mit KI-Automatisierungsingenieuren aus aller Welt. Durchsuche Profile, Fähigkeiten und Expertise in unserer professionellen Community.';
---

<BaseLayout {title} {description}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] bg-white overflow-hidden">
    <!-- Background Animation -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50">
      <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,white,rgba(255,255,255,0.6))]"></div>
      <!-- Floating animation elements -->
      <div class="absolute top-1/4 left-1/4 w-48 h-48 bg-blue-100 rounded-full mix-blend-multiply filter blur-xl opacity-50 animate-blob"></div>
      <div class="absolute top-1/3 right-1/4 w-56 h-56 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-50 animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20">
      <div class="text-center">
        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight mb-8 animate-fade-in">
          <span class="block text-gray-900">Entdecke</span>
          <span class="block bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Experten.</span>
        </h1>
        
        <!-- Subtitle -->
        <p class="text-xl sm:text-2xl text-gray-600 mb-16 max-w-3xl mx-auto font-light leading-relaxed animate-fade-in animation-delay-300">
          Vernetze dich mit führenden KI-Automatisierungsingenieuren und<br>
          erweitere dein professionelles Netzwerk.
        </p>
      </div>
    </div>
  </section>

  <!-- Profiles Component -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <ProfilesList client:load />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-32 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-8">
        Werde Teil der Community.
      </h2>
      <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
        Erstelle dein Profil und verbinde dich mit anderen KI-Automatisierungsexperten.
      </p>
      <a href="/profile" 
         class="inline-flex items-center px-12 py-6 text-xl font-semibold text-white bg-gray-900 rounded-full hover:bg-gray-800 transition-all duration-300 shadow-lg hover:shadow-xl">
        Profil erstellen
        <svg class="ml-3 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>